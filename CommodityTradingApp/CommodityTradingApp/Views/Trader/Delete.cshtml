
@model TraderAccount

<h2>Are you sure you want to delete this trader?</h2>

@if (Model.Trades.Any() && Model.Trades.Any(t => t.IsOpen))
{
    <div class="alert alert-warning">
        This trader has open trades. Deletion may affect related data.
    </div>
}
@if (Model.Balance > 0)
{
    <div class="alert alert-warning">
        This trader has an outstanding balance of @Model.Balance.ToString("C").
    </div>
}
<form asp-action="DeleteConfirmed" asp-route-id="@Model.UserId" method="post">
    @Html.AntiForgeryToken()

    <button type="submit" class="btn btn-danger">Yes, Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
