@model EditUser

<h2>Edit User</h2>

<form asp-action="Edit" asp-route-id="@Model.UserId" method="post">
    <div class="form-group">
        <label asp-for="Username">Username</label>
        <input asp-for="Username" class="form-control" disabled />
    </div>

    <div class="form-group">
        <label asp-for="Password">New Password</label>
        <input asp-for="Password" type="password" class="form-control" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="CountryId">Country</label>
        <select asp-for="CountryId" class="form-control" asp-items="Model.AllCountries"></select>
        <span asp-validation-for="CountryId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Roles</label>
        <select asp-for="SelectedRoleIds" class="form-control" multiple="multiple" asp-items="Model.AllRoles"></select>
        <span asp-validation-for="SelectedRoleIds" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
</form>

<a href="@Url.Action("Index")" class="btn btn-secondary">Back to List</a>
