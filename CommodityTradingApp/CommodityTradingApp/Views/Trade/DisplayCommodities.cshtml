@model IEnumerable<CommodityTradingApp.Models.Commodity>

@{
    ViewData["Title"] = "Commodity List";
}

<h2>@ViewData["Title"]</h2>

<div class="commodity-grid">
    @foreach (var item in Model)
    {
        <div class="commodity-box">
            <h3>@item.CommodityName</h3>
            <p><strong>ID:</strong> @item.CommodityId</p>

            <div class="commodity-info">
                <div>
                    <strong>Price:</strong> 10
                </div>
                <div>
                    <strong>High:</strong> 10
                </div>
                <div>
                    <strong>Low:</strong> 10
                </div>
                <div>
                    <strong>Absolute Change:</strong> 10
                </div>
                <div>
                    <strong>Relative Change:</strong> 10
                </div>
            </div>

            <!-- Instead of button, we'll use hover to show trade form -->
            <div class="commodity-actions">
                <div class="trade-form" id="trade-form-@item.CommodityId" method="post" action="@Url.Action("CreateTrade", "Trade")">
                    <div>
                        <label for="quantity-@item.CommodityId">Quantity</label>
                        <input type="number" id="quantity-@item.CommodityId" class="form-control" placeholder="Enter quantity" required />
                    </div>
                    <div>
                        <label for="buy-sell-@item.CommodityId">Buy/Sell</label>
                        <select id="buy-sell-@item.CommodityId" class="form-control" required>
                            <option value="buy">Buy</option>
                            <option value="sell">Sell</option>
                        </select>
                    </div>
                    <div>
                        <button class="btn btn-success" style="margin-top: 10px;">Trade</button>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<style>
    .commodity-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
        gap: 20px;
        padding: 20px;
    }

    .commodity-box {
        border: 1px solid #ccc;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        background-color: #fff;
        transition: transform 0.3s, box-shadow 0.3s;
        position: relative; /* Added to position trade form */
    }

        .commodity-box:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
        }

        .commodity-box h3 {
            margin-top: 0;
            font-size: 18px;
            font-weight: bold;
        }

        .commodity-box p {
            font-size: 14px;
            color: #555;
        }

    .commodity-info {
        margin-top: 10px;
        margin-bottom: 20px;
        font-size: 14px;
        color: #333;
    }

    .commodity-actions {
        text-align: center;
    }

    /* Initially hide the trade form */
    .trade-form {
        display: none;
        margin-top: 20px;
        padding: 15px;
        border-top: 2px solid #ddd;
    }

    /* Show the trade form when hovering over the commodity box */
    .commodity-box:hover .trade-form {
        display: block;
    }

    .trade-form .form-group {
        margin-bottom: 10px;
    }

    .trade-form .btn {
        width: 100%;
    }
</style>
